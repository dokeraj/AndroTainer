<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroTainer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#38DAFF</item>
        <item name="colorPrimaryVariant">#36393F</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:itemBackground">@color/blue_main</item>
        <item name="android:actionMenuTextColor">@color/blue_main</item>
        <item name="android:textColorPrimary">@color/blue_main</item>
        <item name="android:windowBackground">@color/dis2</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">
            @android:color/transparent
        </item>
        <item name="android:statusBarColor">
            @android:color/transparent
        </item>
        <item name="android:windowLightStatusBar">
            false
        </item>
    </style>

    <style name="NavigationStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textColor">@color/chip_text_colors</item>
    </style>

    <style name="actionChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_action_background</item>
        <item name="android:textColor">@color/chip_action_text_colors</item>
    </style>

</resources>